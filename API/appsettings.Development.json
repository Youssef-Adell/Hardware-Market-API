{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AppDb": "Data Source=.\\SQLEXPRESS;Initial Catalog=hardware-market;Integrated Security=true; TrustServerCertificate = true"

  },
  "ApiUrl":"http://localhost:5100",
  
  "Serilog": {
    "Using":  [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {"Name": "File", "Args": { "path": "Logs/log-.txt", "rollingInterval":"Day", "outputTemplate": "{Timestamp}{NewLine:1}{Message}{NewLine:1}{Exception:1}{NewLine:1}"} }
    ]
  }

}
