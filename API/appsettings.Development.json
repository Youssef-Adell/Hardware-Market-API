{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "AppDb": "Data Source=.\\SQLEXPRESS;Initial Catalog=hardware-market;Integrated Security=true; TrustServerCertificate = true",
    "AuthDb": "Data Source=.\\SQLEXPRESS;Initial Catalog=hardware-market-auth;Integrated Security=true; TrustServerCertificate = true"
  },  

  "Serilog": {
    "Using":  [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {"Name": "File", "Args": { "path": "Logs/log-.txt", "rollingInterval":"Day", "outputTemplate": "{Timestamp}{NewLine:1}{Message}{NewLine:1}{Exception:1}{NewLine:1}"} }
    ]
  },

  "ResourcesStorage":{
    "MainStoringFolder":"wwwroot",
    "ProductsImagesFolder": "Images/Products",
    "CategoriesIconsFolder": "Images/Categories",
    "BrandsLogosFolder": "Images/Brands",
    "MaxAllowedImageSizeInBytes": "2097152",
    "HostUrl":"http://localhost:5100"
  },
  "JwtSettings":{
    "AccessTokenExpirationTimeInSec":"86400"
  }
}
